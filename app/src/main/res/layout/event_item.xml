<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:animateLayoutChanges="true"
    android:layout_gravity="center"
    android:bottomRightRadius="25dp"
    android:bottomLeftRadius="25dp"
    android:topLeftRadius="25dp"
    android:topRightRadius="25dp"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blanco"
       >


        <ImageView
            android:id="@+id/ivEvent_Photo"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:circularflow_angles="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProductoraNombre"
            android:layout_width="64dp"
            android:layout_height="21dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvEventName"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="139dp"
            android:layout_height="70dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/tvProductoraNombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.345" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>