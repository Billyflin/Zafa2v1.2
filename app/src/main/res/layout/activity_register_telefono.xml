<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="443dp"
        android:layout_height="804dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/hd_wallpaper_rainbow_lgbt_lgbtq_subtle_subtle_gay" />



    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="68dp"
        android:layout_height="88dp"
        android:fillColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914"
        app:srcCompat="@drawable/touchscreen_smartphone_icon_18_ffffff_169" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="367dp"
        android:layout_height="105dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/advent_pro"
        android:text="¡Hola! Para brindarte un mejor servicio ingresa tu número de teléfono"
        android:textColor="@color/black"
        android:textColorLink="@color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/labelUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/labelUser"
        android:layout_width="300dp"
        android:layout_height="96dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/advent_pro"
        android:hint="Numero"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:helperText="+56 9 8765 4321"
        app:helperTextTextColor="@color/azul"
        app:hintTextColor="@color/rosa"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/labelUser2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="12" />


    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/_7453"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>